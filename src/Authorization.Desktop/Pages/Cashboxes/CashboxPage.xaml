<Page x:Class="Authorization.Desktop.Pages.Cashboxes.CashboxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Authorization.Desktop.Pages.Cashboxes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CashboxPage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryBorderColor}" 
                CornerRadius="15"
                Height="30" 
                Width="200"
                Margin="5 -10 0 0"
                HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Label Content="Cashboxes"
                       FontSize="18"
                       Foreground="#fff"
                       FontFamily="send-series"/>

            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1">
            <WrapPanel x:Name="MainWP">

            </WrapPanel>
        </ScrollViewer>
    </Grid>

</Page>
